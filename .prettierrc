{
	"arrowParens": "avoid",
	"jsxSingleQuote": true,
	"singleQuote": true,
	"trailingComma": "none",
	"useTabs": true,
	"tabWidth": 2,
	"importOrder": [
		"<THIRD_PARTY_MODULES>",
		"^@/core/(.*)$",
		"^@/core/component/(.*)$",
		"^@/components/(.*)$",
		"^@/components/layout/(.*)$",
		"^@/components/screens/(.*)$",
		"^@/components/ui/(.*)$",
		"^@/styles/(.*)$",
		"^@/config/(.*)$",
		"^@/utils/(.*)$",
		"^@/services/(.*)$",
		"^@/store/(.*)$",
		"^@/api/(.*)$",
		"^.+\\.(template\\.html|module\\.scss)$",
		"^../(.*)$",
		"^./(.*)$"
	],
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true
}
